/* Общие стили */
* {
  font-family: {font-family}, sans-serif;
  color: #0D1321;
}

QInputDialog QLineEdit {
    border-radius: 10px;
    padding: 10px;
    font-size: {font-size-medium1}px;
    color: #0D1321;
    background-color: #FFEFE0;
}
QInputDialog QLabel {
    color: #FFFFFF;
    font-size: {font-size-medium1}px;
}
QInputDialog QPushButton {
    background-color: #D8DCE4;
    color: #0D1321;
    padding: 5px 10px;
}
QInputDialog QPushButton:hover {
    background-color: #51AE5A;
    color: white;
}

QMessageBox {
    background-color: #FFEFE0;
    color: #0D1321;
}
QMessageBox QLabel {
    color: #0D1321;
    font-size: {font-size-medium1}px;
}
QMessageBox QPushButton {
    background-color: #D8DCE4;
    color: #0D1321;
    border-radius: 10px;
    padding: 5px 10px;
}
QMessageBox QPushButton:hover {
    background-color: #51AE5A;
    color: white;
}
QWidget#ChatScreen {
    background-color: #FFEFE0;
    color: #0D1321;
}

/* Стили для QListWidget#chatsList */
QListWidget#chatsList {
    background-color: transparent;
    border: none;
    color: #0D1321;
    font-size: {font-size-medium1}px;
    font-family: {font-family}, sans-serif;
}
QListWidget#chatsList::item:hover {
    background-color: rgba(13, 19, 33, 0.1);
}
QListWidget#chatsList::item:selected {
    background-color: rgba(13, 19, 33, 0.1);
    color: #0D1321;
}

/* Стили для QListWidget#messagesList */
QListWidget#messagesList {
    background-color: transparent;
    border: none;
    color: #0D1321;
    font-size: {font-size-medium1}px;
    font-family: {font-family}, sans-serif;
}

/* Стили для QPushButton без фона и границы */
QPushButton#sendButton,
QPushButton#avatarButton,
QPushButton#themeSwitchButton,
AnimatedButton#profileButton,
QPushButton#overlayButton,
QPushButton#overlayButton_arrow,
QPushButton#backButton,
QPushButton#logoutButtonIcon {
  background: transparent;
  border: none;
}

AnimatedButton {
    background: transparent;
    border: none;
}
AnimatedButton#backButton {
  border: none;
  background: none;
}

/* Стили для QLineEdit */
QLineEdit {
  border: 2px solid #0D1321;
  border-radius: 10px;
  padding: 10px;
  font-size: {font-size-medium1}px;
  color: #0D1321;
  background: transparent;
}

QLineEdit::placeholder {
  color: #0D1321;
  background: transparent;
}

/* Стили для QPushButton#newChat */
QPushButton#newChat {
  font-size: {font-size-medium2}px;
  color: #000000;
  background-color: transparent;
  border: 2px solid #000000;
  border-radius: 15px;
  width: 210px;
  height: 50px;
  padding: 0;
}
QPushButton#newChat:hover {
    background-color: rgba(13, 19, 33, 0.1);
}

/* Стили для QLabel#chatsLabel */
QLabel#chatsLabel {
  font-size: {font-size-medium1}px;
  color: #000000;
  font-weight: bold;
}

/* Стили для QLabel#chatCount */
QLabel#chatCount {
  font-size: {font-size-small}px;
  font-weight: bold;
  color: #000000;
  background-color: #FFFFFF;
  border-radius: 15px;
  min-width: 30px;
  min-height: 30px;
  max-width: 30px;
  max-height: 30px;
  padding: 0;
  text-align: center;
}

/* Стили для QLabel#userName */
QLabel#userName {
  font-size: {font-size-medium1}px;
  color: #000000;
}

/* Стили для QPushButton#LoginButton */
QPushButton#LoginButton {
  background-color: #C21B1B;
  color: white;
  font-size: {font-size-medium2}px;
  border-radius: 30px;
  padding: 10px 20px;
}

QPushButton#LoginButton:hover {
  background-color: #A51A1A;
}

/* Стили для QFrame#profilePanel */
QFrame#profilePanel {
  border: 2px solid black;
  border-radius: 10px;
  background-color: transparent;
}

/* Стили для QLabel#loginLabel */
QLabel#loginLabel {
  color: #0D1321;
  font-size: {font-size-xl}px;
}

/* Стили для QLabel#logoutText */
QLabel#logoutText {
  color: #0D1321;
  font-size: {font-size-small}px;
  text-align: center;
}

/* Стили для QLabel#mushroomMessage */
QLabel#mushroomMessage {
  background-color: #D8DCE4;
  border-radius: 10px;
  color: #0D1321;
  font-size: {font-size-large1}px;
}

/* Стили для QLabel#fontSizeLabel */
QLabel#fontSizeLabel {
  color: #0D1321;
  font-size: {font-size-large2}px;
}

/* Стили для AnimatedSpinBox#fontSizeSpinBox */
AnimatedSpinBox#fontSizeSpinBox {
  color: #0D1321;
  background-color: #E5E5E5;
  font-size: {font-size-xl}px;
  border: none;
  padding-right: 90px;
  padding-left: 10px;
}
AnimatedSpinBox#fontSizeSpinBox::up-button {
  subcontrol-origin: padding;
  subcontrol-position: right;
  width: 50px;
  height: 105px;
  background-color: #FFFFFF;
  border: none;
}
AnimatedSpinBox#fontSizeSpinBox::down-button {
  subcontrol-origin: padding;
  subcontrol-position: right;
  right: 55px;
  width: 50px;
  height: 105px;
  background-color: #FFFFFF;
  border: none;
}
AnimatedSpinBox#fontSizeSpinBox::up-arrow {
  image: url(:/images/light/plus_icon.svg);
  width: 20px;
  height: 20px;
}
AnimatedSpinBox#fontSizeSpinBox::down-arrow {
  image: url(:/images/light/minus_icon.svg);
  width: 20px;
  height: 20px;
}

/* Стили для QLabel#fontLabel */
QLabel#fontLabel {
  color: #0D1321;
  font-size: {font-size-xl}px;
}

/* Стили для AnimatedComboBox#fontComboBox */
AnimatedComboBox#fontComboBox {
  color: #0D1321;
  background-color: #E5E5E5;
  font-size: {font-size-xl}px;
  padding-left: 10px;
  padding-right: 50px;
  border: none;
}
AnimatedComboBox#fontComboBox::drop-down {
  subcontrol-origin: padding;
  subcontrol-position: right;
  width: 50px;
  background-color: #FFFFFF;
  border: none;
}
AnimatedComboBox#fontComboBox::down-arrow {
  width: 20px;
  height: 20px;
}
AnimatedComboBox#fontComboBox QAbstractItemView {
  color: #0D1321;
  background-color: #E5E5E5;
  font-size: {font-size-xl}px;
  selection-background-color: #D3D3D3;
}

/* Стили для QPushButton#yesButton */
QPushButton#yesButton {
  background-color: #D8DCE4;
  color: #0D1321;
  font-size: {font-size-xxl}px;
  border-radius: 39px;
}

/* Стили для QPushButton#noButton */
QPushButton#noButton {
  background-color: #51AE5A;
  color: #FFFFFF;
  font-size: {font-size-xxl}px;
  border-radius: 39px;
}
